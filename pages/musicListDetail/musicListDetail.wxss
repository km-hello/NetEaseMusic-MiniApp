/* 头部样式 */
.recommendSongsContainer .header{
    width: 100%;
    height: 300rpx;
    position: relative;
}
.recommendSongsContainer .header image{
    width: 100%;
    height: 100%;
}

/* 列表区域样式 */

.listContainer{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    background: #fff;
}
.listHeader{
    height: 60rpx;
    line-height: 60rpx;
}
.listHeader text{
    display:flex;
    max-width: 600rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


/* 歌曲列表样式 */

.listScroll{
    height:calc( 100vh - 360rpx);
}
.scrollItem{
    display: flex;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
}

.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: left;
}

.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;

}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


