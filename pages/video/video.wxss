/* 头部样式 */
.videoContainer .header{
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .header .search{
    flex: 1;
    margin: 0 20rpx ;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}
/* 导航栏样式 */
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}
.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navItem .active{
    border-bottom: 1rpx solid #d43c33;
}

.videoScroll{
    /* 运算符左右加空格 否则无效 */
    height: calc(100vh - 152rpx);
}
/* 视频列表样式 */
.videoItem{
    padding: 0 3%;
    margin-bottom: 20rpx;
}
.videoItem video{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}

.videoItem .common {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
  }
  
  
  
  
  .videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* footer */
  .footer {
    border-bottom: 1rpx solid #eee;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
  }
  .footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  
  .footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .footer .comments_praised {
    float: right;
  }
  
  .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
  }
  
  .comments_praised .btn:after {
    border: none;
  }
  
  .comments_praised .item {
    margin-left: 50rpx;
    position: relative;
  }
  
  .comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    left: -5rpx;
    font-size: 20rpx;
  }
  